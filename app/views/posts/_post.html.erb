<div id="<%= dom_id post %>">
  <div  class="card">
    <% if user_signed_in? %>
      <strong class="card-header text-bg-primary mb-3">Author: <%= current_user.email %></strong>
    <% else %>
      <strong class="card-header text-bg-primary mb-3">Author:  ****</strong>
    <% end %>
    <div class="card-body">
      <h2 class="card-title"><%= post.title %></h2>

      <p class="card-text">
        <%= post.body %>
      </p>
      <br>
      <% if current_user %>
        <div class="btn-group">
          <%= button_to "Delete", @post, method: :delete,  class:"btn btn-danger" %>
          <%= link_to "Edit", edit_post_path(@post), class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>